{% schema %}
    {
        "name": "Sections Tutorial",
        "tag": "section",
        "class": "section-tutorial",
        "limit": 2,
        "settings": [
            {
                "type": "text",
                "id": "text_setting",
                "label": "Theme Setting",
                "default": "This is my first setting",
                "info": "This is some helper text"
            },
            {
                "type": "textarea",
                "id": "textarea_setting",
                "label": "Textarea Setting",
            },
                        {
                "type": "richtext",
                "id": "richtext_setting",
                "label": "Richtext Setting",
            }
        ],
        "blocks": [],
        "presets": [
            {
                "name": "Sections Tutorial",
                "settings": {}
            }
        ]
    }
{% endschema %}